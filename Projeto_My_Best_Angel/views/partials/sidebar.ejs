<!-- Sidebar -->
<aside class="sidebar">
    <!-- Sidebar Header -->
    <div class="sidebar-header">
        <div class="sidebar-logo">
            <img src="/images/logo.png" alt="MyBestAngel">
            <span class="logo-text">MyBestAngel</span>
        </div>
        <div class="sidebar-toggle">
            <i class="fas fa-chevron-left"></i>
        </div>
    </div>
    
    <!-- Sidebar Menu -->
    <div class="sidebar-menu">
        <ul>
            <li>
                <a href="/">
                    <span class="menu-icon"><i class="fas fa-home"></i></span>
                    <span class="menu-text">Homepage</span>
                </a>
            </li>
            
            <% if (locals.user) { %>
                <% if (locals.userType === 'angel') { %>
                    <!-- Menu para Angels (guias) -->
                    <li>
                        <a href="/angel/dashboard">
                            <span class="menu-icon"><i class="fas fa-tachometer-alt"></i></span>
                            <span class="menu-text">Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="/angel/profile">
                            <span class="menu-icon"><i class="fas fa-user"></i></span>
                            <span class="menu-text">Meu Perfil</span>
                        </a>
                    </li>
                    <li>
                        <a href="/angel/tours">
                            <span class="menu-icon"><i class="fas fa-map-marked-alt"></i></span>
                            <span class="menu-text">Meus Tours</span>
                        </a>
                    </li>
                    <li>
                        <a href="/angel/visitors">
                            <span class="menu-icon"><i class="fas fa-users"></i></span>
                            <span class="menu-text">Meus Visitantes</span>
                        </a>
                    </li>
                    <li>
                        <a href="/angel/messages">
                            <span class="menu-icon"><i class="fas fa-comments"></i></span>
                            <span class="menu-text">Mensagens</span>
                            <% if (locals.unreadMessages && locals.unreadMessages > 0) { %>
                                <span class="badge bg-danger ms-auto"><%=locals.unreadMessages%></span>
                            <% } %>
                        </a>
                    </li>
                    <li>
                        <a href="/angel/insights">
                            <span class="menu-icon"><i class="fas fa-chart-bar"></i></span>
                            <span class="menu-text">Insights</span>
                        </a>
                    </li>
                <% } else { %>
                    <!-- Menu para Visitors (turistas) -->
                    <li>
                        <a href="/visitor/dashboard">
                            <span class="menu-icon"><i class="fas fa-tachometer-alt"></i></span>
                            <span class="menu-text">Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="/visitor/profile">
                            <span class="menu-icon"><i class="fas fa-user"></i></span>
                            <span class="menu-text">Meu Perfil</span>
                        </a>
                    </li>
                    <li>
                        <a href="/visitor/available-tours">
                            <span class="menu-icon"><i class="fas fa-map-marked-alt"></i></span>
                            <span class="menu-text">Tours Disponíveis</span>
                        </a>
                    </li>
                    <li>
                        <a href="/visitor/messages">
                            <span class="menu-icon"><i class="fas fa-comments"></i></span>
                            <span class="menu-text">Mensagens</span>
                            <% if (locals.unreadMessages && locals.unreadMessages > 0) { %>
                                <span class="badge bg-danger ms-auto"><%=locals.unreadMessages%></span>
                            <% } %>
                        </a>
                    </li>
                <% } %>
            <% } else { %>
                <!-- Menu para usuários não logados -->
                <li>
                    <a href="/auth/login">
                        <span class="menu-icon"><i class="fas fa-sign-in-alt"></i></span>
                        <span class="menu-text">Login</span>
                    </a>
                </li>
                <li>
                    <a href="/auth/register">
                        <span class="menu-icon"><i class="fas fa-user-plus"></i></span>
                        <span class="menu-text">Cadastrar</span>
                    </a>
                </li>
            <% } %>
            
            <!-- Menu para todos os usuários -->
            <li>
                <a href="/tour/search">
                    <span class="menu-icon"><i class="fas fa-search"></i></span>
                    <span class="menu-text">Buscar Tours</span>
                </a>
            </li>
            <li>
                <a href="/emergency">
                    <span class="menu-icon"><i class="fas fa-phone-alt"></i></span>
                    <span class="menu-text">Contatos de Emergência</span>
                </a>
            </li>
            <li>
                <a href="/sac">
                    <span class="menu-icon"><i class="fas fa-headset"></i></span>
                    <span class="menu-text">SAC</span>
                </a>
            </li>
            <li>
                <a href="/map">
                    <span class="menu-icon"><i class="fas fa-map"></i></span>
                    <span class="menu-text">Mapa da Cidade</span>
                </a>
            </li>
        </ul>
    </div>
    
    <!-- User Info (se estiver logado) -->
    <% if (locals.user) { %>
        <div class="user-info">
            <img src="/images/default-avatar.jpg" alt="<%= locals.user.name %>">
            <div class="user-details">
                <h5><%= locals.user.name %></h5>
                <p><%= locals.userType === 'angel' ? 'Guia' : 'Visitante' %></p>
                <a href="/auth/logout" class="logout-link"><i class="fas fa-sign-out-alt"></i> Sair</a>
            </div>
        </div>
    <% } %>
</aside>